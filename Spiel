import java.util.Scanner;
public class Spiel{
    int zahl;
    int ratezahl;
    int versuche;
    public void start(){
        zahl  = (int) (Math.random()*100)+1;
        Scanner input = new Scanner(System.in);
        System.out.println("Willkommen zum Ultimativen Zahlen-Rate-Spiel! \nDie Ultimative super Zahl wurde soeben mit unserem hochtechnologischen Zufallsprinzip generiert und steht jetzt für dich zum Raten bereit. \nGebe eine Zahl ein um sie zu eraten"); 
        while (ratezahl < zahl || ratezahl > zahl){
            ratezahl = input.nextInt();
            versuche +=1;
            if (ratezahl == zahl){
                System.out.println("Das war die Richtige Zahl, nach nur " + versuche + " Versuchen.");
            }
            else if (ratezahl < zahl){
                System.out.println("Das ist leider nicht die Richtige Zahl, die Zahl ist größer.");
            }
            else if (ratezahl > zahl){
                System.out.println("Das ist leider nicht die Richtige Zahl, die Zahl ist kleiner.");  
            }
        }
    }
}
